        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="119dp"
        android:textStyle="bold"
        android:textSize="30sp"
        tools:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:text="Tutorial-1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bMenu1" />

            <Button
                android:text="Tutorial-2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bMenu2" />

            <Button
                android:text="Tutorial-3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bMenu3" />

            <Button
                android:text="Tutorial-4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bMenu4" />

            <Button
                android:text="Tutorial-5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bMenu5" />

            <Button
                android:text="Tutorial-6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bMenu6" />

            <Button
                android:text="Tutorial-7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bMenu7" />

            <Button
                android:text="Tutorial-8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bMenu8" />

            <Button
                android:text="Tutorial-9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bMenu9" />

            <Button
                android:text="Tutorial-10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bMenu10" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
